<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_search_content"
    android:orientation="vertical" >

    <include layout="@layout/banner_navigation" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_search_title"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <!-- 选择线路： -->

            <TextView
                style="@style/page_label_big"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_vertical|right"
                android:text="@string/indexstatus_label_line"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/indexstatus_sp_line"
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_weight="3"
                android:background="@drawable/bg_spinner"
                android:gravity="center" />

            <!-- 截止时间： -->

            <TextView
                style="@style/page_label_big"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
                android:gravity="center_vertical|right"
                android:text="@string/indexstatus_label_date"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/indexstatus_tv_date"
                style="@style/button_text"
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_weight="3"
                android:background="@drawable/bg_search_button"
                android:gravity="center_vertical"
                android:paddingLeft="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <!-- 选择指标： -->

            <TextView
                style="@style/page_label_big"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_vertical|right"
                android:text="@string/indexstatus_label_index"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/indexstatus_sp_index"
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_weight="3"
                android:background="@drawable/bg_spinner" />

            <!-- 指标标准： -->

            <TextView
                style="@style/page_label_big"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
                android:gravity="center_vertical|right"
                android:text="@string/indexstatus_label_value"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/indexstatus_sp_value"
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_weight="3"
                android:background="@drawable/bg_spinner" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <!-- 选择产品： -->

            <TextView
                android:id="@+id/indexstatus_tv_pro"
                style="@style/page_label_big"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_vertical|right"
                android:text="@string/indexstatus_label_pro"
                android:textSize="16sp" />

            <Button
                android:id="@+id/indexstatus_tv_select_product"
                style="@style/button_text"
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_weight="3"
                android:background="@drawable/bg_spinner"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="@string/indexstatus_bt_prolst"
                android:maxLength="10"
                android:paddingLeft="5dp"
                android:paddingRight="40dp"
                android:singleLine="true" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:visibility="invisible" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ico_line" />

        <!-- 查询 -->

        <ImageButton
            android:id="@+id/indexstatus_ib_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/bt_indexstatus_search" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_search_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/bg_search_bottom" />

        <!-- 绿底01号路线 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/bg_title"
            android:gravity="center" >

            <TextView
                android:id="@+id/indexstatus_tv_linepart"
                style="@style/unit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            style="@style/listview_bg_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/listview_line" />

            <TextView
                style="@style/listview_tv_title"
                android:layout_width="235dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/indexstatus_lv_title_pro" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/listview_line" />

            <TextView
                style="@style/listview_tv_title"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="@string/indexstatus_lv_title_prorate" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/listview_line" />

            <TextView
                android:id="@+id/indexstatus_tv_linepart_date"
                style="@style/listview_tv_title"
                android:layout_width="125dp"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/listview_line" />

            <TextView
                style="@style/listview_tv_title"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/indexstatus_lv_title_change" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/listview_line" />
        </LinearLayout>

        <ListView
            android:id="@+id/indexstatus_lv_linepart"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:cacheColorHint="@color/bg_lv_item"
            android:divider="@color/listview_line"
            android:dividerHeight="1dp"
            android:footerDividersEnabled="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_title"
            android:gravity="center" >

            <TextView
                android:id="@+id/indexstatus_tv_gridpart"
                style="@style/unit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/indexstatus_labelitem_grid" />
        </LinearLayout>

        <LinearLayout
            style="@style/listview_bg_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/listview_line" />

            <TextView
                style="@style/listview_tv_title"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/indexstatus_lv_title_pro" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/listview_line" />

            <TextView
                style="@style/listview_tv_title"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="@string/indexstatus_lv_title_prorate" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/listview_line" />

            <TextView
                android:id="@+id/indexstatus_tv_gridpart_date"
                style="@style/listview_tv_title"
                android:layout_width="125dp"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/listview_line" />

            <TextView
                style="@style/listview_tv_title"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/indexstatus_lv_title_change" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/listview_line" />
        </LinearLayout>

        <ListView
            android:id="@+id/indexstatus_lv_gridpart"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:cacheColorHint="@color/bg_lv_item"
            android:divider="@color/listview_line"
            android:dividerHeight="1dp"
            android:footerDividersEnabled="false" />
    </LinearLayout>

</LinearLayout>