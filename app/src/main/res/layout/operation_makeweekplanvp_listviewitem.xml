<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/makeweekplanvp_tv_proname"
        style="@style/listview_tv_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2.0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:orientation="vertical" >

        <et.tsingtaopad.cui.NoScrollListView
            android:id="@+id/makeweekplanvp_lv_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null" />

        <LinearLayout
            android:id="@+id/makeweekplanvp_ll_temp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/makeweekplanvp_tv_temp_listviewitem_term"
                style="@style/listview_tv_item_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/weekworkplan_msg3" />

            <TextView
                android:id="@+id/makeweekplanvp_tv_temp_listviewitem_rate"
                style="@style/listview_tv_item_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>