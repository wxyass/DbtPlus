<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/listview_bg_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/listview_line" />

    <!-- 品种 -->

    <TextView
        android:id="@+id/inoutsave_tv_lvitem_proname"
        style="@style/listview_tv_item_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="2" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/listview_line" />

    <!-- 初期库存 -->

    <EditText
        android:id="@+id/inoutsave_et_lvitem_laststorenum"
        style="@style/listview_tv_item_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:enabled="false"
        android:inputType="number"
        android:maxLength="5" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/listview_line" />
    
    <!-- 转入转出(分销量) -->

    <EditText
        android:id="@+id/inoutsave_et_lvitem_indirectnum"
        style="@style/listview_tv_item_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:imeOptions="flagNoExtractUi"
        android:inputType="numberSigned"
        android:maxLength="5" />
    <!--
         <EditText
        android:id="@+id/inoutsave_et_lvitem_laststorenum"
        style="@style/listview_tv_item_text"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:enabled="false"
        android:inputType="number"
        android:maxLength="5" />


    -->

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/listview_line" />

    <!-- 进货量(到货确认) -->

    <EditText
        android:id="@+id/inoutsave_et_lvitem_innum"
        style="@style/listview_tv_item_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:imeOptions="flagNoExtractUi"
        android:inputType="number"
        android:maxLength="5" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/listview_line" />

    <!-- 每日赠酒销量 -->

    <EditText
        android:id="@+id/inoutsave_et_lvitem_directnum"
        style="@style/listview_tv_item_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:imeOptions="flagNoExtractUi"
        android:inputType="number"
        android:maxLength="5" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/listview_line" />

    

    

    <!-- 协议店销量 -->

    <EditText
        android:id="@+id/inoutsave_et_lvitem_selfsales"
        style="@style/listview_tv_item_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:imeOptions="flagNoExtractUi"
        android:inputType="number"
        android:maxLength="5" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/listview_line" />

    <!-- 非协议店销量 -->

    <EditText
        android:id="@+id/inoutsave_et_lvitem_unselfsales"
        style="@style/listview_tv_item_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:imeOptions="flagNoExtractUi"
        android:inputType="number"
        android:maxLength="5" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/listview_line" />

    <!-- 其他销量 -->

    <EditText
        android:id="@+id/inoutsave_et_lvitem_othersales"
        style="@style/listview_tv_item_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:imeOptions="flagNoExtractUi"
        android:inputType="number"
        android:maxLength="5" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/listview_line" />
    <!-- 期末库存 -->

    <EditText
        android:id="@+id/inoutsave_et_lvitem_storenum"
        style="@style/listview_tv_item_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:enabled="false"
        android:imeOptions="flagNoExtractUi"
        android:inputType="number"
        android:maxLength="5" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/listview_line" />

</LinearLayout>