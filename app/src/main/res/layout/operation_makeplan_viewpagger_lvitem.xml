<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/listview_bg_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginTop="10dp"
    android:background="@color/bg_page_color"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="horizontal" >

    <!-- 采集项名称 -->

    <TextView
        android:id="@+id/vp_tv_product"
        style="@style/listview_tv_item_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/listview_line" />

    <!-- 产品名称 -->

    <TextView
        android:id="@+id/vp_tv_proname"
        style="@style/listview_tv_item_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:visibility="gone" />

    <View
        android:id="@+id/vp_v_deve"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/listview_line"
        android:visibility="gone" />

    <!-- 数量 -->

    <TextView
        android:id="@+id/vp_tv_num"
        style="@style/listview_tv_item_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/default_digital" />

    <EditText
        android:id="@+id/vp_et_num"
        style="@style/listview_tv_item_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:inputType="number"
        android:visibility="gone" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/listview_line" />

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4" >

        <!-- 请选择终端 -->

        <TextView
            android:id="@+id/date_tv_terminal"
            style="@style/listview_tv_item_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@drawable/bg_make_plan_textarea"
            android:gravity="center"
            android:hint="@string/makeplan_hint_terminal"
            android:minHeight="40dp"
            android:textColor="@color/normal_light_pressed_deep" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/date_tv_terminal"
            android:layout_alignRight="@id/date_tv_terminal"
            android:layout_centerVertical="true"
            android:src="@drawable/bg_make_plan_textarea_o" />
    </RelativeLayout>

    <View
        android:id="@+id/delete_devider"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/listview_line"
        android:visibility="gone" />

    <!-- 删除 -->

    <ImageView
        android:id="@+id/img_delete"
        style="@style/page_label_big"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:src="@drawable/bt_delete_list_up"
        android:visibility="gone" />

</LinearLayout>