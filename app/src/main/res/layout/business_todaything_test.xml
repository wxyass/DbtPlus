<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#f8f8f9"
            android:src="@drawable/bg_search_bottom" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Spinner
                android:id="@+id/todaything_spinner_routeline"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/bg_spinner" />
        </RelativeLayout>

        <TableLayout
            android:id="@+id/todaything_tablelayout_taitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numColumns="2" >

            <ListView
                android:id="@+id/todaything_lv_display"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/listview_line"
                android:dividerHeight="1dp"
                android:cacheColorHint="@color/bg_lv_item"
                android:footerDividersEnabled="false" >
            </ListView>
        </TableLayout>
    </LinearLayout>

</LinearLayout>