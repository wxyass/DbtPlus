<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/listview_bg_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/listview_bg_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/listview_line" />

        <TextView
            android:id="@+id/quicklydialog_tv_itemname"
            style="@style/listview_tv_item_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/listview_line" />

        <ListView
            android:id="@+id/quicklydialog_lv_pro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:divider="@color/listview_line"
            android:dividerHeight="1dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/listview_line" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/listview_line" />

</LinearLayout>