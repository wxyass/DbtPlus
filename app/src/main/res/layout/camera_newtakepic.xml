<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#e3efe3"
    android:orientation="vertical" >

    <include
        layout="@layout/banner_cui"
        android:visibility="gone" />

    <include
        layout="@layout/banner_navigation"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <!-- 显示预览图形 -->

        <et.tsingtaopad.visit.shopvisit.camera.container.CameraContainer
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <include
            android:id="@+id/camera_bottom_bar"
            layout="@layout/camera_bottom_bar"
            android:visibility="visible" />

        <include
            android:id="@+id/camera_header_bar"
            layout="@layout/camera_header_bar"
            android:visibility="visible" />
    </RelativeLayout>

    <Button
        android:id="@+id/button_ca_capture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/bt_shopvisit_takepic"
        android:visibility="gone" />

</LinearLayout>