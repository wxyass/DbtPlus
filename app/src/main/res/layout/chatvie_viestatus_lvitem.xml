<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/listview_bg_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/listview_line" />

    <TextView
        android:id="@+id/viestatus_tv_viename"
        style="@style/listview_tv_item_text"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_weight="6" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/listview_line" />

    <EditText
        android:id="@+id/viestatus_et_monthsell"
        style="@style/listview_tv_item_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_weight="2"
        android:ems="8"
        android:maxLength="8"
        android:hint="@string/hit_input"
        android:inputType="number"
        android:singleLine="true" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/listview_line" />

    <EditText
        android:id="@+id/viestatus_et_currstore"
        style="@style/listview_tv_item_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_weight="2"
        android:ems="8"
        android:maxLength="8"
        android:hint="@string/hit_input"
        android:inputType="number"
        android:singleLine="true" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/listview_line" />

    <EditText
        android:id="@+id/viestatus_et_describle"
        style="@style/listview_tv_item_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_weight="3"
        android:maxLength="200"
        android:ems="200"
        android:hint="@string/hit_input" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/listview_line" />

</LinearLayout>