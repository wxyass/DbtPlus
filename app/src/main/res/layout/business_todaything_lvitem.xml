<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/listview_bg_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6.0"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/business_todaything_lvitem_img_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="10dp"
                android:src="@drawable/bg_todaywords_fill" />

            <TextView
                android:id="@+id/business_todaything_lvitem_tv_content"
                style="@style/listview_tv_item_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.0"
                android:text="" />
        </LinearLayout>

        <TextView
            android:id="@+id/business_todaything_lvitem_tv_creater"
            style="@style/listview_tv_item_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:layout_weight="1.0"
            android:text="" />

        <TextView
            android:id="@+id/business_todaything_lvitem_tv_date"
            style="@style/listview_tv_item_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:layout_weight="2.0"
            android:text="" />

    </LinearLayout>

</LinearLayout>