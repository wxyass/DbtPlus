<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/listview_bg_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/listview_line" />

    <TextView
        android:id="@+id/quicklydialog_tv_proname"
        style="@style/listview_tv_item_text"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:textColor="#666464"
        android:gravity="center"
        android:layout_weight="1" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/listview_line" />

    <EditText
        android:id="@+id/quicklydialog_et_changenum"
        style="@style/listview_tv_item_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="8"
        android:inputType="numberSigned"
        android:maxLength="8"
        android:singleLine="true" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/listview_line" />

</LinearLayout>